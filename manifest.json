{
  "manifest_version": 3,
  "name": "Temp Mail Extension",
  "version": "1.0",
  "description": "Get a temporary email using Mail.GW API.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["https://api.mail.gw/*"]
}
